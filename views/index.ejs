<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Create Account</title>
</head>
<body class="bg-white text-gray-900 overflow-hidden">

    <!-- Main Container -->
    <div class="relative min-h-screen">

        <!-- Home Button aligned to the top right -->
        <div class="absolute top-4 right-4">
            <a class="bg-blue-500 hover:bg-blue-600 text-white rounded-md px-6 py-3 font-semibold" href="/">Home</a>
        </div>

        <!-- Form Container -->
        <div class="flex items-center justify-center min-h-screen">

            <!-- Form Box -->
            <div class="bg-gray-100 text-black p-8 rounded-lg shadow-lg w-full sm:w-96">

                <!-- Title -->
                <h3 class="text-3xl text-center text-zinc-500 font-semibold mb-6">Create Account</h3>

                <!-- Register Form -->
                <form action="/register" method="POST" class="space-y-4 ">

                    <!-- Name Input -->
                    <input class="w-full px-4 py-2 bg-transparent border-2 border-zinc-700 rounded-md text-zinc-800 focus:outline-none focus:border-blue-500" type="text" placeholder="Name" name="name" required>

                    <!-- Username Input -->
                    <input class="w-full px-4 py-2 bg-transparent border-2 border-zinc-700 rounded-md text-zinc-800 focus:outline-none focus:border-blue-500" type="text" placeholder="Username" name="username" required>

                    <!-- Password Input -->
                    <input class="w-full px-4 py-2 bg-transparent border-2 border-zinc-700 rounded-md text-zinc-800 focus:outline-none focus:border-blue-500" type="password" placeholder="Password" name="password" required>

                    <!-- Email Input -->
                    <input class="w-full px-4 py-2 bg-transparent border-2 border-zinc-700 rounded-md text-zinc-800 focus:outline-none focus:border-blue-500" type="email" placeholder="Email" name="email" required>

                    <!-- Age Input -->
                    <input class="w-full px-4 py-2 bg-transparent border-2 border-zinc-700 rounded-md text-zinc-800 focus:outline-none focus:border-blue-500" type="number" placeholder="Age" name="age" required>

                    <!-- Submit Button to Create Account -->
                    <input class="w-full px-4 py-2 bg-blue-500 hover:bg-white-600 text-white font-semibold rounded-md cursor-pointer transition-all duration-300" type="submit" value="Create Account">
                </form>

                <div class="flex mt-4 items-center w-full">
                    <hr class="w-full border-t-2 border-zinc-600">
                    <span class="text-zinc-500 px-2">or</span>
                    <hr class="w-full border-t-2 border-zinc-600">
                </div>

                <!-- Login Button (styled like Create Account Button) -->
                <a href="/login" class="w-full block px-4 py-2 bg-transparent border-2 border-blue-500 hover:bg-white text-blue-500 font-semibold rounded-md text-center mt-4 transition-all duration-300">
                    Login
                </a>
            </div>

        </div>

    </div>

</body>
</html>
