<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body class="bg-white text-black">
    <div class="w-full min-h-screen p-10">

        <!-- Logout Button -->
        <div class="flex justify-end mb-6">
            <a class="bg-red-500 hover:bg-red-600 text-white rounded-md px-6 py-3 font-semibold" href="/logout">Logout</a>
        </div>

        <!-- Profile Section -->
        <div class="flex items-center gap-4 mb-6">
            <div class="w-24 h-24 bg-zinc-500 rounded-full overflow-hidden shadow-lg">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic ? user.profilepic : 'default-profile-pic.jpg' %>">
            </div>
            <div class="flex flex-col">
                <h3 class="text-3xl text-zinc-600 font-bold">Hello, <%= user.name %> ðŸ‘‹</h3>
                <a class="bg-zinc-600 font-bold hover:bg-zinc-500 text-white rounded-md px-4 py-2 mt-2 w-fit" href="/profile/upload">Upload Profile</a>
            </div>
        </div>

        <!-- New Post Section -->
        <h5 class="font-semibold text-lg text-zinc-600 mb-4">Create a New Post:</h5>
        <form method="post" action="/post" class="space-y-4">
            <textarea placeholder="What's on your mind?" class="block w-full p-4 bg-transparent border-4 border-zinc-700 rounded-md text-zinc-500 focus:ring-2 focus:ring-blue-500" name="content" required></textarea>
            <input class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-md w-full md:w-44 transition duration-300" type="submit" value="Create New Post">
        </form>

        <!-- User Posts Section -->
        <div class="posts mt-20">
            <h3 class="text-zinc-500 font-semibold ml-4 text-xl">Your Posts:</h3>
            <div class="postcontainer mt-5 space-y-6">
                <% user.posts.reverse().forEach(function(post) { %>
                    <div class="post p-6 bg-white text-black rounded-md border-4 border-zinc-600 transition duration-300">
                        <h4 class="text-blue-500 font-semibold mb-2"><%= post.username %></h4>
                        <p class="text-sm text-zinc-600 mb-3"><%= post.content %></p>
                        <small class="text-zinc-600"><%= post.likes.length %> likes</small>
                        <div class="btns flex gap-4 mt-4">
                            <a class="text-blue-500 " href="/like/<%= post._id %>">
                                <%= post.likes.indexOf(user._id) === -1 ? "Like" : "UnLike" %>
                            </a>
                            <a class="text-zinc-600" href="/edit/<%= post._id %>">Edit</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>

